<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="0dp"
    tools:context=".Activities.SignUpActivity">
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D8EBF1"
        android:padding="38dp">
        <TextView
            android:id="@+id/goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#005B77"
            android:text="Lets Start Here"
            android:textStyle="bold"
            android:textSize="24sp"/>
       <TextView
           android:id="@+id/mResponseTv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#005B77"
           android:textStyle="bold"
           android:textSize="24sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:alpha="0.8"
        android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Phone Number"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:inputType="phone"
        android:textColorHint="@color/white"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:alpha="0.9"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:alpha="0.8"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:textColorHighlight="@color/white"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp"
     android:paddingTop="10dp"
     android:paddingBottom="20dp">

  <EditText
      android:id="@+id/editTextFirst"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:layout_weight="0.5"
      android:layout_gravity="right"
      android:drawableLeft="@drawable/ic_person_black_24dp"
      android:drawablePadding="10dp"
      android:hint="First Name"
      android:alpha="0.8"
      android:inputType="text"
      android:textColor="@color/black"
      android:textColorHint="@color/white"
      android:textColorHighlight="@color/white"/>

  <EditText
      android:id="@+id/editTextLast"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:layout_weight="0.5"
      android:hint="Last Name"
      android:alpha="0.8"
      android:drawableLeft="@drawable/ic_person_black_24dp"
      android:drawablePadding="10dp"
      android:inputType="text"
      android:padding="15dp"
      android:textColor="@color/black"
      android:textColorHint="@color/white"
      android:textColorHighlight="@color/white"/>

 </LinearLayout>
