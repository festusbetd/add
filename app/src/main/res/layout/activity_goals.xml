<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GoalsActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/goals_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#005B77"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">Goals"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:paddingTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ActiveGoalsValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:text="Active Goals"
            android:textColor="#005B77"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/SuccessfulGoalsValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="-28dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#1BA35B"
            android:text="Successful Goals"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/OverdueGoalsValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5"
            android:paddingRight="0dp"
            android:layout_marginLeft="-6dp"
            android:text="Overdue Goals"
            android:textColor="#C97878"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:paddingTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ActiveGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:text="10"
            android:textColor="#005B77"
            android:textStyle="bold"
            android:textSize="37sp" />

        <TextView
            android:id="@+id/SuccessfulGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1BA35B"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:text="10"
            android:textStyle="bold"
            android:textSize="37sp"
            />
        <TextView
            android:id="@+id/OverdueGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:textColor="#C97878"
            android:textStyle="bold"
            android:text="5"
            android:textSize="37sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/ActiveGoalsAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="KES 120,000"
            android:textColor="#005B77"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/SuccessfulGoalsAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="#1BA35B"
            android:text="KES 150,000"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/OverdueGoalsAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:textColor="#C97878"
            android:text="KES 10,000"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61.52dp"
        android:background="#005B77"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnAddGoal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="18sp"
            android:text="Add a goal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:shadowColor="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/ic_add_black_24dp"
            android:background="@drawable/shapegoal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/goalHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals History"
            android:layout_weight="1"
            android:textColor="#005B77"
            android:textStyle="bold"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/goalstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Status"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/goalshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="Show"
            android:textSize="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D8EBF1"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="0dp">
        <TextView
            android:id="@+id/FilterbyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Date"
            android:textColor="#005B77"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#D8EBF1"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="#fff"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:hint="To Date"
            android:inputType="phone"
            android:padding="15dp"
           android:textColorHint="#005B77"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <EditText
            android:id="@+id/editTextDateg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#fff"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="10dp"
            android:hint="To Date"
            android:inputType="phone"
            android:padding="15dp"
            android:textColorHint="#005B77"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
