<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AddGoalActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/add_goals_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#005B77"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#005B77"
            android:text=">Goals>"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/goals1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Goal"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/ActiveGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Name"
            android:textColor="#B9B9B9"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/afieldTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trip to London"
            android:textColorHint="#005B77"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/ActiveGoalsValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Expected Start Date"
            android:textColor="#B9B9B9"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/OverdueGoalsValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:text="Overdue Goals"
            android:textColor="#B9B9B9"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="right"
            android:hint="01/01/2018"
            android:textColorHint="#005B77"
            android:inputType="datetime"
            android:padding="15dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextDateg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:drawablePadding="10dp"
            android:hint="12/03/2018"
            android:textColorHint="#005B77"
            android:inputType="date"
            android:padding="15dp"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/aActiveGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#B9B9B9"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/afieldActiveGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Description"
            android:textColorHint="#005B77"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61.52dp"
        android:paddingTop="20dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnAddGoal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="18sp"
            android:text="Add a goal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:shadowColor="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/ic_add_black_24dp"
            android:background="@drawable/shapegoal"/>
    </LinearLayout>
</LinearLayout>